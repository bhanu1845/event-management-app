# Telugu Workers Hub - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Configuration
VITE_APP_NAME=Telugu Workers Hub
VITE_APP_ENV=development
VITE_API_BASE_URL=http://localhost:8080

# MongoDB Atlas Configuration
# Sign up at https://cloud.mongodb.com and create a cluster
VITE_MONGODB_CLUSTER_NAME=Cluster0
VITE_MONGODB_DATABASE_NAME=telugu_workers_hub
VITE_MONGODB_USERNAME=your_mongodb_username
VITE_MONGODB_CLUSTER_URL=your-cluster.mongodb.net
VITE_MONGODB_PASSWORD=your_mongodb_password

# MongoDB Atlas Data API Configuration (Alternative to direct connection)
# Enable Data API in your MongoDB Atlas project settings
VITE_MONGODB_DATA_API_URL=https://data.mongodb-api.com/app/your-app-id/endpoint/data/v1
VITE_MONGODB_API_KEY=your_mongodb_api_key
VITE_MONGODB_APP_ID=your-mongodb-app-id

# MongoDB Connection String (Complete connection URL)
VITE_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/telugu_workers_hub?retryWrites=true&w=majority

# Firebase Configuration (Alternative Database Option)
# Get these from Firebase Console: https://console.firebase.google.com
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Authentication Configuration
VITE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
VITE_JWT_EXPIRY=7d

# API Configuration
VITE_ENABLE_API_LOGS=true
VITE_API_TIMEOUT=10000

# Features Toggle
VITE_ENABLE_USER_REGISTRATION=true
VITE_ENABLE_WORKER_REGISTRATION=true
VITE_ENABLE_BOOKING_SYSTEM=true
VITE_ENABLE_PAYMENT_GATEWAY=false

# Third Party Services (Optional)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id

# Development Settings
VITE_DEBUG_MODE=true
VITE_MOCK_DATA=true

# Instructions:
# 1. Copy this file to .env
# 2. Choose either MongoDB Atlas OR Firebase for your database
# 3. Fill in the appropriate database credentials
# 4. Update JWT_SECRET with a secure random string
# 5. Set MOCK_DATA=false when using real database
# 6. Restart your development server after making changes